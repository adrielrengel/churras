<p id="notice"><%= notice %></p>

<h1>Listing Fornecedores</h1>

<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Razao social</th>
      <th>Endereco</th>
      <th>Situacao</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedores.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.razao_social %></td>
        <td><%= fornecedor.endereco %></td>
        <td><%= fornecedor.situacao %></td>
        <td><%= fornecedor.usuario %></td>
        <td><%= link_to 'Show', fornecedor %></td>
        <td><%= link_to 'Edit', edit_fornecedor_path(fornecedor) %></td>
        <td><%= link_to 'Destroy', fornecedor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

