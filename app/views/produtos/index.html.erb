<p id="notice"><%= notice %></p>

<h1>Listing Produtos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Categoria</th>
      <th>Unidade</th>
      <th>Situacao</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%#= produto.usuario.blank? ? 'Usuário não encontrado' : produto.usuario.nome %>


  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome  %></td>
        <td><%= produto.valor %></td>
        <td><%= produto.categoria_produto_nome %></td>
        <td><%= produto.unidade_nome %></td>
        <td><%= produto.situacao %></td>
        <td><%= produto.usuario.nome rescue 'Usuário não encontrado' %></td>
        <td><%= link_to 'Exibir', produto %></td>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
         </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to raw('<span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Adicionar Produtos'), new_produto_path%>
