<p id="notice"><%= notice %></p>

<h1>Listing Funcionarios</h1>

<table  class="table table-bordered">
  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Data admissao</th>
      <th>Data demissao</th>
      <th>Salario base</th>
      <th>Funcao</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.pessoa %></td>
        <td><%= funcionario.data_admissao %></td>
        <td><%= funcionario.data_demissao %></td>
        <td><%= funcionario.salario_base %></td>
        <td><%= funcionario.funcao_nome rescue 'Função não encontrada' %></td>
        <td><%= funcionario.usuario.nome rescue 'Usuário não encontrado' %></td>
        <td><%= link_to 'Show', funcionario %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

