  <thead>
    <tr>
      <th>Pessoa</th>
      <th>Tipo</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.cliente_nome %></td>
        <td><%= cliente.pessoa.tipo rescue 'NÃ£o Informado' %></td>
