<p id="notice"><%= notice %></p>

<h1>Listing Funcoes</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcoes.each do |funcao| %>
      <tr>
        <td><%= funcao.nome %></td>
        <td><%= link_to 'Show', funcao %></td>
        <td><%= link_to 'Edit', edit_funcao_path(funcao) %></td>
        <td><%= link_to 'Destroy', funcao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

